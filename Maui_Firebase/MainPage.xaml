<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui_Firebase.MainPage">

    <Grid>
        <StackLayout x:Name="SLEntry" VerticalOptions="Center" Spacing="15" Padding="15">
            <Entry Placeholder="Email"/>
            <Entry Placeholder="Password"/>
            <Button Text="Entry"/>
            <Button BackgroundColor="Transparent" TextColor="Black" Clicked="Button_ClickedAnmelden" Text="Ich habe keinen Konto"/>
        </StackLayout>
        <StackLayout x:Name="SLAnmelden" IsVisible="False" VerticalOptions="Center" Spacing="15" Padding="15">
            <Entry Placeholder="User Name"/>
            <Entry Placeholder="Email"/>
            <Entry Placeholder="Password"/>
            <Button Text="Anmelden"/>
            <Button BackgroundColor="Transparent" TextColor="Black" Clicked="Button_ClickedAnmelden"  Text="Ich habe ein Konto"/>
        </StackLayout>
    </Grid>

</ContentPage>
